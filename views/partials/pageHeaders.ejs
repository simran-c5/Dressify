                    <div class="container">
                        <i class="fas fa-cart-arrow-down fa-lg"></i>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="container">
                        <i class="far fa-user fa-lg"></i>
                    </div>
                </li>
            </ul>
